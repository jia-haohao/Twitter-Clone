<h1>一覧表示</h1>
<p><%= notice %></p>
<table>
  <head>
    <tr>
      <th>内容</th>
    </tr>
    </head>
    
    <body>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= link_to '詳細', post_path(post.id) %></td>
          <td><%= link_to '編集', edit_post_path(post.id), data: { confirm: '本当に編集していいですか？'} %></td>
          <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %></td>
        </tr>
      <% end %>
    </body>
  </table>

<br>

<%= link_to '新しいつぶやきを投稿' , new_post_path, class: "link-btn" %>

